<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


        <ImageView
            android:id="@+id/race_vehicle_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/race_vehicle_item_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="vehicleOwner"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/race_vehicle_item_tag"
            app:layout_constraintStart_toEndOf="@+id/race_vehicle_item_tag"
            app:layout_constraintTop_toTopOf="@+id/race_vehicle_item_tag" />

        <TextView
            android:id="@+id/race_vehicle_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="vehicleTag"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/race_vehicle_item_status"
            app:layout_constraintStart_toEndOf="@+id/race_vehicle_item_status"
            app:layout_constraintTop_toTopOf="@+id/race_vehicle_item_status" />

        <TextView
            android:id="@+id/race_vehicle_item_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="vehicleDriver"
            app:layout_constraintStart_toStartOf="@+id/race_vehicle_item_tag"
            app:layout_constraintTop_toBottomOf="@+id/race_vehicle_item_tag" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>