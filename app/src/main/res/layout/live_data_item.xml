<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


        <TextView
            android:id="@+id/tvLastDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last_dt"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvVehicleTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="vehicle_tag"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLastDt" />

        <TextView
            android:id="@+id/tvRaceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="race_tag"
            app:layout_constraintBottom_toBottomOf="@+id/tvVehicleTag"
            app:layout_constraintStart_toEndOf="@+id/tvVehicleTag"
            app:layout_constraintTop_toTopOf="@+id/tvVehicleTag" />

        <TextView
            android:id="@+id/tvSector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sector"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVehicleTag" />

        <TextView
            android:id="@+id/tvSectorInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Sector interval"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSector"
            app:layout_constraintStart_toEndOf="@+id/tvSector"
            app:layout_constraintTop_toTopOf="@+id/tvSector" />

        <TextView
            android:id="@+id/tvLapLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/lap"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSector" />

        <TextView
            android:id="@+id/tvLap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="lap/laps"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tvLapLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvSectorInterval" />

        <TextView
            android:id="@+id/tvLapIntervalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="@string/lap_interval"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tvLap"
            app:layout_constraintTop_toBottomOf="@+id/tvSectorInterval" />

        <TextView
            android:id="@+id/tvLapInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:text="Lap interval"
            app:layout_constraintStart_toEndOf="@+id/tvLapIntervalLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvSectorInterval" />

        <ImageView
            android:id="@+id/ivFinishFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_flag_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>