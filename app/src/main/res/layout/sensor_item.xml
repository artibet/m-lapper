<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


        <ImageView
            android:id="@+id/sensor_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sensor_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="sensorTag"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/sensor_item_aa"
            app:layout_constraintStart_toEndOf="@+id/sensor_item_aa"
            app:layout_constraintTop_toTopOf="@+id/sensor_item_aa" />

        <ImageView
            android:id="@+id/sensor_item_isStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_timer"
            app:layout_constraintStart_toStartOf="@+id/sensor_item_status"
            app:layout_constraintTop_toBottomOf="@+id/sensor_item_status" />

        <TextView
            android:id="@+id/sensor_item_aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="aa"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sensor_item_status"
            app:layout_constraintTop_toTopOf="@+id/sensor_item_status" />

        <TextView
            android:id="@+id/sensor_item_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="threshold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/sensor_item_isStart"
            app:layout_constraintStart_toEndOf="@+id/sensor_item_isStart"
            app:layout_constraintTop_toTopOf="@+id/sensor_item_isStart" />

        <TextView
            android:id="@+id/sensor_item_updatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="UpdatedAt"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/sensor_item_threshold"
            app:layout_constraintTop_toBottomOf="@+id/sensor_item_threshold" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_more" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>